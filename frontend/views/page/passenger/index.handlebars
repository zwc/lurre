{{>navbar}}

<div class="container theme-showcase" role="main">
    <div class="page-header">
        <h1>Välj ett åk</h1>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="list-group" id="tours">
                {{#tours}}
                <a href="#" class="list-group-item" data-seats-forward="{{seatsLeftForward}}" data-seats-back="{{seatsLeftBack}}" data-id="{{guid}}">
                    <h4 class="list-group-item-heading">{{place.name}}</h4>
                    <p class="list-group-item-text">
                        Om 45 minuter ({{time.time}}),<br/>
                        {{seatsLeft}} platser kvar<br/>
                        <!--<div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100" style="width: 66%;"><span class="sr-only">60% Complete</span></div>
                        </div>-->
                    </p>
                </a>
                {{/tours}}
            </div>
        </div>
        <div class="col-sm-4" id="seats" style="display: none;">
            <div class="list-group">
                <a href="#" class="list-group-item forward" data-id="forward">
                    <h4 class="list-group-item-heading">Framsäte</h4>
                    <p class="list-group-item-text">
                        <span class="amount">0</span> plats<span class="plural"></span>
                    </p>
                </a>
                <a href="#" class="list-group-item back" data-id="back">
                    <h4 class="list-group-item-heading">Baksäte</h4>
                    <p class="list-group-item-text">
                        <span class="amount">0</span> plats<span class="plural"></span>
                    </p>
                </a>
            </div>
        </div>
        <div class="col-sm-4" id="go" style="display: none;">
            <form id="create" method="POST" action="/passenger/create">
                <input type="hidden" id="place" class="place" name="place" value="" />
                <input type="hidden" id="seat" class="seat" name="seat" value="" />
                <button id="follow" type="button" class="btn btn-lg btn-success">Häng på!</button>
            </form>
        </div>
    </div>
</div>